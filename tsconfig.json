{
  "extends": "@bracketed/typscript-config/extra-strict",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "ESNext",
    "paths": {
      "#root/*": ["dist/*"]
    },
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": [".", "./src"],
  "exclude": ["./dist/**", "node_modules"]
}
